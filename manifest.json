{
  "manifest_version": 3,
  "name": "Amazon Product Extractor",
  "version": "1.0",
  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "storage",
    "downloads",
    "clipboardWrite"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}